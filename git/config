[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow reverse
    frag = magenta reverse
    old = red reverse
    new = green reverse

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    co = checkout
    st = status -s
    unstage = reset HEAD --
    up = pull --rebase
    upm = pull --rebase origin master
    upd = pull --rebase origin develop
    put = push origin HEAD
    puf = push origin HEAD --no-verify
    lp = log -p
    lla = log --pretty=format:\"%h %Cblue%ar %Cgreen%an%Creset: %s %Cred%d\"
    ll = lla -5
    gr = log --graph --pretty=format:\"%Cred%h %Cblue%ar%Creset %Cgreen%an%Creset %s %Cred%d\"
    set-upstream = !"git branch -u origin/$(git symbolic-ref --short HEAD)"

[core]
  editor = nvr -o
  excludesfile = ~/.gitignore
  pager = less -X

[diff]
  tool = nvr

[merge]
  tool = nvr

[difftool "nvr"]
  cmd = nvr -s -d -O $LOCAL $REMOTE
  prompt = false

[mergetool "nvr"]
  cmd = nvr -s -O $MERGED
  prompt = false

[push]
  autoSetupRemote = true
