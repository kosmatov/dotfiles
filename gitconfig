[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow reverse
    frag = magenta reverse
    old = red reverse
    new = green reverse

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    co = checkout
    st = status
    unstage = reset HEAD --
    up = pull --rebase
    upm = pull --rebase origin master
    upd = pull --rebase origin develop
    put = push origin HEAD
    lp = log -p
    lg = git log --pretty=format:\"%h %Cblue%ar %Cgreen%an%Creset: %s %Cred%d\"
    ll = log --pretty=format:\"%h %Cblue%ar %Cgreen%an%Creset: %s %Cred%d\"
    gr = log --graph --pretty=format:\"%Cred%h %Cblue%ar%Creset %Cgreen%an%Creset %s %Cred%d\"

[core]
  editor = vim -f
  excludesfile = ~/.gitignore
  pager = more

[diff]
  tool = vimdiff

[merge]
  tool = vimdiff
  conflictstyle = diff3

[difftool]
  prompt = false

[mergetool]
  prompt = false
