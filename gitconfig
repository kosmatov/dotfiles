[user]
    name = Konstantin Kosmatov
    email = key@kosmatov.ru
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    ch = checkout
    st = status
    unstage = reset HEAD --
    last = log -1 HEAD
    up = pull --rebase
    put = push origin HEAD
    lp = log -p
    lg = git log --pretty=format:\"%h %Cblue%ar %Cgreen%an%Creset: %s %Cred%d\"
    ll = log --pretty=format:\"%h %Cblue%ar %Cgreen%an%Creset: %s %Cred%d\"
    gr = log --graph --pretty=format:\"%Cred%h %Cblue%ar%Creset %Cgreen%an%Creset %s %Cred%d\"

[core]
  editor = vim -f
[diff]
  tool = vimdiff
[merge]
  tool = vimdiff
[difftool]
  prompt = false
