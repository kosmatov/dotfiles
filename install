#!/usr/bin/env zsh

if [ ! -d ~/.oh-my-zsh ]; then
  curl -L https://github.com/robbyrussell/oh-my-zsh/raw/master/tools/install.sh | sh
fi

cd `dirname $0`
DOTFILES=$(pwd)

echo "export DOTFILES=${DOTFILES}" > ~/.dotfiles
cat ~/.zshrc | grep "\.dotfiles" || echo ". ${HOME}/.dotfiles" > ~/.zshrc
cat ~/.zshrc | grep "DOTFILES/zsh/rc" || echo 'source $DOTFILES/zsh/rc' >> ~/.zshrc
[ $USER = key ] && cat ~/.zshrc | grep 'DOTFILES/zsh/keyrc' || echo 'source $DOTFILES/zsh/keyrc' >> ~/.zshrc
cat ~/.gitconfig | grep include || echo "[include]\n\tpath = ${DOTFILES}/git/config" >> ~/.gitconfig
[ -f ~/.gitignore ] || cp $DOTFILES/git/ignore ~/.gitignore
mkdir -p ~/.bin

source ~/.zshrc

[ -L ~/.config/nvim ] || ln -s ${DOTFILES}/lazyvim ~/.config/nvim
