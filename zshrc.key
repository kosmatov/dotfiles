export LOGNAME=key
export USER=key

alias vf="git grep --open-files-in-pager=$EDITOR"
alias dcrun="docker-compose run"
alias dcdev="docker-compose -f docker-compose-dev.yml run"

function dspec() {
  [ -f 'docker-compose.yml' ] || app=$(basename $(pwd))
  dcrun -w /app/$app -e RACK_ENV=test -e APP_ENV=test console bundle exec rspec $1
}
